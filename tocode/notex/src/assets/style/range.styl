$color-1 = #000
$color-2 = #e8e8e8
$color-3 = #fff

input[type=range]
    height 58px
    appearance none
    margin 10px 0
    width 100%

    &:focus
        outline none

input[type=range]::-webkit-slider-runnable-track
    width 100%
    height 26px
    cursor pointer
    animate 0.2s
    box-shadow 0px 0px 1px $color-1
    background $color-2
    border-radius 50px
    border 0px solid $color-1

    &:focus
        background $color-2

input[type=range]::-webkit-slider-thumb
    box-shadow 1px 1px 1px $color-1
    border 1px solid $color-1
    height 50px
    width 50px
    border-radius 47px
    background $color-3
    cursor pointer
    appearance none
    margin-top -12.5px

input[type=range]::-moz-range-track
    width 100%
    height 26px
    cursor pointer
    animate 0.2s
    box-shadow 0px 0px 1px $color-1
    background $color-2
    border-radius 50px
    border 0px solid $color-1

input[type=range]::-moz-range-thumb
    box-shadow 1px 1px 1px $color-1
    border 1px solid $color-1
    height 50px
    width 50px
    border-radius 47px
    background $color-3
    cursor pointer

input[type=range]::-ms-track
    width 100%
    height 26px
    cursor pointer
    animate 0.2s
    background transparent
    border-color transparent
    color transparent

input[type=range]::-ms-fill-lower
    background $color-2
    border 0px solid $color-1
    border-radius 100px
    box-shadow 0px 0px 1px $color-1

    &:focus
        background $color-2

input[type=range]::-ms-fill-upper
    background $color-2
    border 0px solid $color-1
    border-radius 100px
    box-shadow 0px 0px 1px $color-1

    &:focus
        background $color-2

input[type=range]::-ms-thumb
    margin-top 1px
    box-shadow 1px 1px 1px $color-1
    border 1px solid $color-1
    height 50px
    width 50px
    border-radius 47px
    background $color-3
    cursor pointer
