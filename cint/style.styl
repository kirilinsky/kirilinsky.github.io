.dark 
    background grey
.light
    background  darkgrey
.line
    width 100%
    height 1px
    margin 0.75rem 0
    background grey
*
    box-sizing border-box
:root
    font-size 15px
    @media (max-width: 750px)
        font-size 13px
body
    margin 0
    padding 0
img
    max-width 100%
    max-height: 100%
.wrap
    max-width 960px
    height 100vh
    @media (max-width: 750px)
        min-height: 100vh
    margin 0 auto
    padding 0.75rem
    .custom
        margin-right 0.75rem
        display grid
        width 100%
        height 10%
        grid-template-columns 1fr 2fr 3fr
        grid-auto-rows 95%
        grid-gap 0.75rem
    main
        width 100%
        height 100%
        padding 0.75rem 0
        display: flex
        @media (max-width: 750px)
            min-height: 100%
            flex-flow: column nowrap
            padding 0
        aside
            width 20%
            height 100%
            display flex
            flex-flow column nowrap
            justify-content space-between
            @media (max-width: 750px)
                width 100%
                height 45%
                flex-flow: row wrap
                margin 0.75rem auto
            .top
                height 50%
                @media (max-width: 750px)
                    margin-bottom 0.75rem
            .bottom
                height 25%
            .cell
                width 100%
                @media (max-width: 750px)
                    height 50%
        section
            width 80%
            height 100%
            display flex
            flex-flow column nowrap
            justify-content: space-between
            @media (max-width: 750px)
                width 100%
                min-height 55%
            .content
                width 100%
                height 30%
            .top
                width calc(100% - 1.5rem)
                margin 0 0.75rem
                @media (max-width: 750px)
                    width 100%
                    margin 0.75rem 0
            .middle
                height 40%
                display flex
                flex-flow: row wrap
                justify-content: flex-start
                @media (max-width: 750px)
                    height 70%
                .cell
                    width calc(22% - 0.75rem)
                    height calc(50% - 1.5rem)
                    margin 0.75rem
                    &:hover
                        cursor pointer
                        transition: ease 0.5s
                        box-shadow: 0 0 4px grey
            .bottom
                width 100%
                display: flex
                justify-content: space-between
                .cell
                    width 50%
                    height 100%
                    margin 0 0.75rem
footer
    width 100%
    height 15%
    display flex
    justify-content space-between
    align-items flex-end
    @media (max-width: 750px)
        min-height: 25%
        flex-direction: column
    .cell
        width calc(33.3% - 1.5rem)
        height calc(100% - 0.75rem)
        display: flex
        flex-flow column nowrap
        justify-content: space-between
        @media (max-width: 750px)
            width 100%
            height 35%
            margin 0.75rem 0
        .container
            width 100%
            height calc(50%- 0.75rem)
            @media (max-width: 750px)
                height 50%

.modal
    display: none
    position: absolute
    width 400px
    height 400px
    background #000
    top 20%
    left 40%
    z-index 10
    box-shadow: 0 0 5px #fff
    img
        position: relative
    .layer
        position absolute
        top 1rem
        font 1.5rem sans-serif
        color #ffffff
        user-select none
        background #000
        padding 0.5rem
        border-radius: 0.25rem
        box-shadow: inset 0 0 3px #fff
    .right
        right 1rem
        &:hover
            cursor pointer
    .left
        left 1rem
        


